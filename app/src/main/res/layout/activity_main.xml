<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.repomean.poweroff.MainActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp">


        <Button
            android:id="@+id/btnEnableAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="33dp"
            android:text="Enable"
            tools:layout_editor_absoluteX="147dp"
            tools:layout_editor_absoluteY="257dp" />

        <Button
            android:id="@+id/btnLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnDisableAdmin"
            android:layout_alignBottom="@+id/btnDisableAdmin"
            android:layout_centerHorizontal="true"
            android:text="Lock"
            tools:layout_editor_absoluteX="165dp"
            tools:layout_editor_absoluteY="421dp" />

        <Button
            android:id="@+id/btnDisableAdmin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnEnableAdmin"
            android:layout_alignBottom="@+id/btnEnableAdmin"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="43dp"
            android:text="Disable"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="106dp" />

        <Switch
            android:id="@+id/openOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Open Overlay"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="125dp" />

    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
